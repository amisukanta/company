<h1>Sign up Company</h1>

<%= error_messages_for 'company' %>
  <div>
    <%= form_for(@company) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :description, :rows => 3 %>
      <%= f.text_area :description %>

      <%= f.label :contact_no %>
      <%= f.text_field :contact_no %>

      <%= f.submit "Create account", class: "btn btn-large btn-primary" %>
    <% end %>
  
</div>
