<h1>Sign up Company</h1>

<div class="row">
  <div>
    <%= form_for(@company) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :description, :rows => 5 %>
      <%= f.text_area :description %>

      <%= f.label :contact_no %>
      <%= f.text_field :contact_no %>

      <%= f.submit "Create account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
